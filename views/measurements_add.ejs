<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Add Measurement</title>
</head>
<body>
<h1>Add Measurement</h1>
<form action="/measurements/add" method="POST">
    <label for="user_id">Select User:</label>
    <select name="user_id" id="user_id">
        <% users.forEach(user => { %>
            <option value="<%= user.id %>"><%= user.name %></option>
        <% }) %>
    </select>
    <br><br>

    <label for="measurement_date">Date:</label>
    <input type="date" name="measurement_date" id="measurement_date" required>
    <br><br>

    <label for="low_value">Low Value:</label>
    <input type="number" name="low_value" id="low_value" required>
    <br><br>

    <label for="high_value">High Value:</label>
    <input type="number" name="high_value" id="high_value" required>
    <br><br>

    <label for="pulse">Pulse:</label>
    <input type="number" name="pulse" id="pulse" required>
    <br><br>

    <button type="submit">Add Measurement</button>
</form>
</body>
</html>
